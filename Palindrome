package Intro
public class Palindrome{

 public static void main(String args[]) {  

  int p,sum=0,temp;    
  int n=656;
  temp=n;    

   while(n>0)
  {    
       p=n%10;  
       sum=(sum*10)+p;    
       n=n/10;    
  }    
        if(temp==sum)    
        System.out.println("palindrome number ");    
  else    
        System.out.println("not a palindrome number");    

} 

}
